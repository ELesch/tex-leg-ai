{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "prisma generate && next build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/sync/bills/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/sync/bills",
      "schedule": "0 2 * * *"
    }
  ]
}
