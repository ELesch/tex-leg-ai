// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["texlegai"]
}

// ============================================
// User & Authentication Models
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  passwordHash  String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // AI Provider Settings
  aiProvider String? // 'openai', 'anthropic', 'google'
  aiModel    String? // Model ID like 'gpt-4.1', 'claude-sonnet-4-5-20250929', 'gemini-2.5-flash'
  aiApiKey   String? @db.Text // User's API key (will be encrypted)

  // Relations
  accounts       Account[]
  sessions       Session[]
  chatSessions   ChatSession[]
  followedBills  FollowedBill[]
  adminSettings  AdminSetting[]

  // Team collaboration relations
  teamMemberships   TeamMembership[]
  annotations       BillAnnotation[]
  workspaceComments WorkspaceComment[]
  teamChatMessages  TeamChatMessage[]

  // Personal annotations and notes
  personalAnnotations PersonalAnnotation[]
  personalNotes       PersonalNote[]

  // Contacts management relations
  contacts        Contact[]
  userContacts    UserContact[]
  contactNotes    ContactNote[]

  // Push notification relations
  pushSubscriptions      PushSubscription[]
  notificationPreference NotificationPreference?
  billNotifications      BillNotification[]

  @@index([email])
  @@schema("texlegai")
}

enum UserRole {
  USER
  ADMIN

  @@schema("texlegai")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@schema("texlegai")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("texlegai")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@schema("texlegai")
}

// ============================================
// Legislature Session Model
// ============================================

model LegislatureSession {
  id        String    @id @default(cuid())
  code      String    @unique // e.g., "89R"
  name      String // e.g., "89th Regular Session"
  startDate DateTime?
  endDate   DateTime?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  bills Bill[]

  @@index([code])
  @@map("legislature_session")
  @@schema("texlegai")
}

// ============================================
// Bill Model
// ============================================

model Bill {
  id        String             @id @default(cuid())
  sessionId String
  session   LegislatureSession @relation(fields: [sessionId], references: [id])

  // Bill identification
  billType   BillType
  billNumber Int
  billId     String   @unique // e.g., "HB 123", "SB 456"

  // Bill content
  filename    String
  description String  @db.Text
  content     String? @db.Text
  contentPath String? // Path to full document file

  // Bill metadata
  status         String?
  authors        String[]
  coauthors      String[]   @default([])  // Separate from authors (from FTP XML)
  sponsors       String[]   @default([])  // Senate sponsors for House bills
  cosponsors     String[]   @default([])  // Senate cosponsors
  subjects       String[]
  lastAction     String?
  lastActionDate DateTime?
  committeeName   String?    // Current committee name (from FTP XML)
  committeeStatus String?    // "In committee", "Reported", etc.
  lastUpdateFtp   DateTime?  // lastUpdate attribute from FTP XML

  // Bill structure & complexity analysis
  isPdfOnly     Boolean         @default(false) // true if bill text is only available as PDF
  articleCount  Int? // number of ARTICLE sections in the bill
  sectionCount  Int? // number of SECTION entries in the bill
  affectedCodes String[] // list of Texas Codes modified (e.g., ["Education Code", "Government Code"])
  complexity    BillComplexity? // categorization: simple, moderate, complex, omnibus
  billPattern   BillPattern? // detected pattern: terminology_replacement, omnibus, single_code, null

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  chatSessions   ChatSession[]
  followedBy     FollowedBill[]
  teamWorkspaces TeamWorkspace[]

  // Personal annotations and notes
  personalAnnotations PersonalAnnotation[]
  personalNotes       PersonalNote[]

  // Bill structure relations
  articles                BillArticle[]
  codeReferences          BillCodeReference[]
  terminologyReplacements TerminologyReplacement[]

  @@unique([sessionId, billType, billNumber])
  @@index([sessionId])
  @@index([billType])
  @@index([billNumber])
  @@index([billId])
  @@index([complexity])
  @@index([billPattern])
  @@index([isPdfOnly])
  @@schema("texlegai")
}

enum BillType {
  HB // House Bill
  SB // Senate Bill
  HJR // House Joint Resolution
  SJR // Senate Joint Resolution
  HCR // House Concurrent Resolution
  SCR // Senate Concurrent Resolution

  @@schema("texlegai")
}

enum BillComplexity {
  SIMPLE // Single section, straightforward changes
  MODERATE // Multiple sections, single code
  COMPLEX // Multiple codes, significant changes
  OMNIBUS // Multiple articles, extensive changes across codes

  @@schema("texlegai")
}

enum BillPattern {
  TERMINOLOGY_REPLACEMENT // Bill primarily replaces terms throughout code
  OMNIBUS // Bill contains multiple articles covering different topics
  SINGLE_CODE // Bill modifies a single Texas Code

  @@schema("texlegai")
}

// ============================================
// Bill Structure Models
// ============================================

// Represents an ARTICLE section in an omnibus bill
model BillArticle {
  id            String   @id @default(cuid())
  billId        String
  bill          Bill     @relation(fields: [billId], references: [id], onDelete: Cascade)
  articleNumber String // Can be "1", "I", "A", etc.
  title         String // Article title/heading
  startLine     Int // Starting line number in bill text
  endLine       Int // Ending line number in bill text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([billId])
  @@index([articleNumber])
  @@map("bill_article")
  @@schema("texlegai")
}

// Represents a reference to a specific code section being modified
model BillCodeReference {
  id          String              @id @default(cuid())
  billId      String
  bill        Bill                @relation(fields: [billId], references: [id], onDelete: Cascade)
  code        String // e.g., "Education Code", "Government Code"
  title       String? // e.g., "Title 2"
  chapter     String // e.g., "Chapter 29"
  subchapter  String? // e.g., "Subchapter A"
  section     String // e.g., "Section 29.914" or "29.914"
  subsections String[] // e.g., ["(a)", "(b)", "(c)(1)"]
  action      CodeReferenceAction // add, amend, repeal
  billSection String // Which SECTION of the bill this comes from (e.g., "SECTION 1")
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([billId])
  @@index([code])
  @@index([action])
  @@index([billId, code])
  @@map("bill_code_reference")
  @@schema("texlegai")
}

enum CodeReferenceAction {
  ADD // Adding new section
  AMEND // Modifying existing section
  REPEAL // Removing section

  @@schema("texlegai")
}

// Tracks terminology replacement patterns in bills
model TerminologyReplacement {
  id              String   @id @default(cuid())
  billId          String
  bill            Bill     @relation(fields: [billId], references: [id], onDelete: Cascade)
  fromTerm        String // Original term being replaced
  toTerm          String // New term replacing it
  occurrenceCount Int // Number of times this replacement appears
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([billId, fromTerm, toTerm]) // Prevent duplicate entries
  @@index([billId])
  @@index([fromTerm])
  @@map("terminology_replacement")
  @@schema("texlegai")
}

// ============================================
// Chat Models
// ============================================

model ChatSession {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  billId String
  bill   Bill   @relation(fields: [billId], references: [id], onDelete: Cascade)

  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  messages ChatMessage[]

  @@unique([userId, billId])
  @@index([userId])
  @@index([billId])
  @@map("chat_session")
  @@schema("texlegai")
}

model ChatMessage {
  id            String      @id @default(cuid())
  chatSessionId String
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)

  role    MessageRole
  content String      @db.Text

  createdAt DateTime @default(now())

  @@index([chatSessionId])
  @@map("chat_message")
  @@schema("texlegai")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM

  @@schema("texlegai")
}

// ============================================
// Followed Bills Model
// ============================================

model FollowedBill {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  billId String
  bill   Bill   @relation(fields: [billId], references: [id], onDelete: Cascade)

  notes     String?  @db.Text
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Push notification relation
  notification BillNotification?

  @@unique([userId, billId])
  @@index([userId])
  @@map("followed_bill")
  @@schema("texlegai")
}

// ============================================
// Admin Settings Model
// ============================================

model AdminSetting {
  id            String      @id @default(cuid())
  key           String      @unique
  value         String      @db.Text
  type          SettingType @default(STRING)
  category      String
  description   String?
  updatedBy     String?
  updatedByUser User?       @relation(fields: [updatedBy], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([category])
  @@map("admin_setting")
  @@schema("texlegai")
}

enum SettingType {
  STRING
  NUMBER
  BOOLEAN
  JSON

  @@schema("texlegai")
}

// ============================================
// Team Collaboration Models
// ============================================

model Team {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Team AI Settings (optional - falls back to owner's settings)
  aiProvider String? // 'openai', 'anthropic', 'google'
  aiModel    String? // Model ID
  aiApiKey   String? @db.Text // Team's shared API key

  memberships    TeamMembership[]
  workspaces     TeamWorkspace[]
  invitations    TeamInvitation[]
  activities     TeamActivity[]
  sharedContacts SharedContact[]

  @@index([slug])
  @@map("team")
  @@schema("texlegai")
}

enum TeamRole {
  OWNER
  ADMIN
  CONTRIBUTOR
  REVIEWER
  VIEWER

  @@schema("texlegai")
}

model TeamMembership {
  id       String   @id @default(cuid())
  teamId   String
  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     TeamRole @default(CONTRIBUTOR)
  joinedAt DateTime @default(now())

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
  @@map("team_membership")
  @@schema("texlegai")
}

model TeamInvitation {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  email     String
  role      TeamRole @default(CONTRIBUTOR)
  token     String   @unique @default(cuid())
  expiresAt DateTime
  createdBy String
  createdAt DateTime @default(now())

  @@index([teamId])
  @@index([token])
  @@map("team_invitation")
  @@schema("texlegai")
}

model TeamWorkspace {
  id         String            @id @default(cuid())
  teamId     String
  team       Team              @relation(fields: [teamId], references: [id], onDelete: Cascade)
  billId     String
  bill       Bill              @relation(fields: [billId], references: [id], onDelete: Cascade)
  status     WorkspaceStatus   @default(IN_REVIEW)
  priority   WorkspacePriority @default(MEDIUM)
  dueDate    DateTime?
  assigneeId String?
  summary    String?           @db.Text
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  annotations BillAnnotation[]
  comments    WorkspaceComment[]
  chatSession TeamChatSession?

  @@unique([teamId, billId])
  @@index([teamId])
  @@index([billId])
  @@map("team_workspace")
  @@schema("texlegai")
}

enum WorkspaceStatus {
  NEW
  IN_REVIEW
  NEEDS_DISCUSSION
  APPROVED
  REJECTED
  ON_HOLD

  @@schema("texlegai")
}

enum WorkspacePriority {
  LOW
  MEDIUM
  HIGH
  URGENT

  @@schema("texlegai")
}

model BillAnnotation {
  id           String         @id @default(cuid())
  workspaceId  String
  workspace    TeamWorkspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  startOffset  Int
  endOffset    Int
  selectedText String         @db.Text
  content      String         @db.Text
  type         AnnotationType @default(NOTE)
  resolved     Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([workspaceId])
  @@map("bill_annotation")
  @@schema("texlegai")
}

enum AnnotationType {
  NOTE
  QUESTION
  CONCERN
  HIGHLIGHT

  @@schema("texlegai")
}

enum NoteSourceType {
  MANUAL
  CHAT
  TEAM_CHAT

  @@schema("texlegai")
}

model WorkspaceComment {
  id          String             @id @default(cuid())
  workspaceId String
  workspace   TeamWorkspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId      String
  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  content     String             @db.Text
  parentId    String?
  parent      WorkspaceComment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies     WorkspaceComment[] @relation("CommentReplies")
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  @@index([workspaceId])
  @@map("workspace_comment")
  @@schema("texlegai")
}

model TeamChatSession {
  id          String            @id @default(cuid())
  workspaceId String            @unique
  workspace   TeamWorkspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  messages    TeamChatMessage[]

  @@map("team_chat_session")
  @@schema("texlegai")
}

model TeamChatMessage {
  id            String          @id @default(cuid())
  chatSessionId String
  chatSession   TeamChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  userId        String?
  user          User?           @relation(fields: [userId], references: [id])
  role          MessageRole
  content       String          @db.Text
  createdAt     DateTime        @default(now())

  @@index([chatSessionId])
  @@map("team_chat_message")
  @@schema("texlegai")
}

model TeamActivity {
  id         String       @id @default(cuid())
  teamId     String
  team       Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId     String
  type       ActivityType
  entityType String
  entityId   String
  metadata   Json?
  createdAt  DateTime     @default(now())

  @@index([teamId])
  @@index([createdAt])
  @@map("team_activity")
  @@schema("texlegai")
}

enum ActivityType {
  WORKSPACE_CREATED
  STATUS_CHANGED
  ANNOTATION_ADDED
  COMMENT_ADDED
  CHAT_MESSAGE
  MEMBER_JOINED
  MEMBER_LEFT

  @@schema("texlegai")
}

// ============================================
// Personal Annotations & Notes Models
// ============================================

model PersonalAnnotation {
  id           String         @id @default(cuid())
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  billId       String
  bill         Bill           @relation(fields: [billId], references: [id], onDelete: Cascade)
  startOffset  Int
  endOffset    Int
  selectedText String         @db.Text
  content      String         @db.Text
  type         AnnotationType @default(NOTE)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([userId, billId])
  @@map("personal_annotation")
  @@schema("texlegai")
}

model PersonalNote {
  id         String          @id @default(cuid())
  userId     String
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  billId     String
  bill       Bill            @relation(fields: [billId], references: [id], onDelete: Cascade)
  content    String          @db.Text
  sourceType NoteSourceType?
  sourceId   String?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@index([userId, billId])
  @@map("personal_note")
  @@schema("texlegai")
}

// ============================================
// Contacts Management Models
// ============================================

// Normalized Author entity - represents legislators
model Author {
  id            String   @id @default(cuid())
  name          String   @unique // Canonical name matching Bill.authors
  displayName   String? // Friendly display name
  chamber       Chamber?
  district      String?
  party         String?

  // Contact info
  email         String?
  phone         String?
  officeAddress String?  @db.Text
  capitolOffice String?
  websiteUrl    String?
  photoUrl      String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  staffPositions StaffPosition[]
  userContacts   UserContact[]

  @@index([name])
  @@map("author")
  @@schema("texlegai")
}

enum Chamber {
  HOUSE
  SENATE

  @@schema("texlegai")
}

// User's personal contact
model Contact {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  firstName    String
  lastName     String
  displayName  String?

  email        String?
  phone        String?
  mobilePhone  String?
  address      String?  @db.Text
  title        String?
  organization String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  staffPositions StaffPosition[]
  notes          ContactNote[]
  sharedWith     SharedContact[]

  @@index([userId])
  @@index([lastName, firstName])
  @@map("contact")
  @@schema("texlegai")
}

// Links a contact to an author with a staff position
model StaffPosition {
  id             String    @id @default(cuid())
  contactId      String
  contact        Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  authorId       String
  author         Author    @relation(fields: [authorId], references: [id], onDelete: Cascade)

  position       StaffRole
  customPosition String? // For OTHER position type
  isPrimary      Boolean   @default(false)
  isActive       Boolean   @default(true)
  startDate      DateTime?
  endDate        DateTime?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([contactId, authorId, position])
  @@index([authorId])
  @@index([contactId])
  @@map("staff_position")
  @@schema("texlegai")
}

enum StaffRole {
  CHIEF_OF_STAFF
  LEGISLATIVE_DIRECTOR
  COMMUNICATIONS_DIRECTOR
  DISTRICT_DIRECTOR
  POLICY_ADVISOR
  COMMITTEE_CLERK
  SCHEDULER
  LEGISLATIVE_AIDE
  ADMINISTRATIVE_ASSISTANT
  INTERN
  OTHER

  @@schema("texlegai")
}

// User's personal link to an author (for notes and personal contact info)
model UserContact {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  authorId      String
  author        Author   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // User's personal notes/additions
  personalEmail String?
  personalPhone String?
  personalNotes String?  @db.Text

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  notes         ContactNote[]

  @@unique([userId, authorId])
  @@index([userId])
  @@index([authorId])
  @@map("user_contact")
  @@schema("texlegai")
}

// Notes with @-mention support
model ContactNote {
  id            String       @id @default(cuid())
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Attached to either Contact or UserContact
  contactId     String?
  contact       Contact?     @relation(fields: [contactId], references: [id], onDelete: Cascade)
  userContactId String?
  userContact   UserContact? @relation(fields: [userContactId], references: [id], onDelete: Cascade)

  content       String       @db.Text
  mentions      Json? // [{type, id, displayText}]

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([userId])
  @@index([contactId])
  @@index([userContactId])
  @@map("contact_note")
  @@schema("texlegai")
}

// Sharing contacts with teams
model SharedContact {
  id        String   @id @default(cuid())
  contactId String
  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  sharedBy  String
  sharedAt  DateTime @default(now())

  @@unique([contactId, teamId])
  @@index([teamId])
  @@map("shared_contact")
  @@schema("texlegai")
}

// ============================================
// Sync Job Model (Background Sync State)
// ============================================

model SyncJob {
  id        String        @id @default(cuid())
  status    SyncJobStatus @default(PENDING)

  // Configuration
  sessionCode   String
  sessionName   String
  billTypes     String[]  // Array of bill types to sync

  // Progress tracking per bill type
  // Format: {"HB": 150, "SB": 75} - last bill number checked for each type
  progressByType Json      @default("{}")

  // Statistics
  totalProcessed Int       @default(0)
  totalCreated   Int       @default(0)
  totalUpdated   Int       @default(0)
  totalErrors    Int       @default(0)

  // Bill type completion status
  // Format: {"HB": true, "SB": false} - whether type is exhausted
  completedTypes Json      @default("{}")

  // Timing
  startedAt     DateTime?
  pausedAt      DateTime?
  completedAt   DateTime?
  lastActivityAt DateTime  @default(now())

  // Error tracking
  lastError     String?   @db.Text

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([status])
  @@map("sync_job")
  @@schema("texlegai")
}

enum SyncJobStatus {
  PENDING     // Created but not started
  RUNNING     // Currently processing
  PAUSED      // User paused
  COMPLETED   // All bill types exhausted
  STOPPED     // User stopped manually
  ERROR       // Failed with error

  @@schema("texlegai")
}

// ============================================
// Push Notification Models
// ============================================

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint  String   @db.Text
  p256dh    String
  auth      String
  userAgent String?  @db.Text
  createdAt DateTime @default(now())

  @@unique([userId, endpoint])
  @@index([userId])
  @@map("push_subscription")
  @@schema("texlegai")
}

model NotificationPreference {
  id       String  @id @default(cuid())
  userId   String  @unique
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  enabled  Boolean @default(false)

  // Defaults for new bill notifications
  defaultStatusChange     Boolean @default(true)
  defaultNewAction        Boolean @default(true)
  defaultNewVersion       Boolean @default(true)
  defaultHearingScheduled Boolean @default(true)
  defaultVoteRecorded     Boolean @default(true)

  @@map("notification_preference")
  @@schema("texlegai")
}

model BillNotification {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  followedBillId String       @unique
