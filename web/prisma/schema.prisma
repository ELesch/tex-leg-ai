// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// User & Authentication Models
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  passwordHash  String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // AI Provider Settings
  aiProvider String? // 'openai', 'anthropic', 'google'
  aiModel    String? // Model ID like 'gpt-4.1', 'claude-sonnet-4-5-20250929', 'gemini-2.5-flash'
  aiApiKey   String? @db.Text // User's API key (will be encrypted)

  // Relations
  accounts      Account[]
  sessions      Session[]
  chatSessions  ChatSession[]
  savedBills    SavedBill[]
  adminSettings AdminSetting[]

  // Team collaboration relations
  teamMemberships   TeamMembership[]
  annotations       BillAnnotation[]
  workspaceComments WorkspaceComment[]
  teamChatMessages  TeamChatMessage[]

  // Personal annotations and notes
  personalAnnotations PersonalAnnotation[]
  personalNotes       PersonalNote[]

  @@index([email])
}

enum UserRole {
  USER
  ADMIN
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Legislature Session Model
// ============================================

model LegislatureSession {
  id        String    @id @default(cuid())
  code      String    @unique // e.g., "89R"
  name      String // e.g., "89th Regular Session"
  startDate DateTime?
  endDate   DateTime?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  bills Bill[]

  @@index([code])
  @@map("legislature_session")
}

// ============================================
// Bill Model
// ============================================

model Bill {
  id        String             @id @default(cuid())
  sessionId String
  session   LegislatureSession @relation(fields: [sessionId], references: [id])

  // Bill identification
  billType   BillType
  billNumber Int
  billId     String   @unique // e.g., "HB 123", "SB 456"

  // Bill content
  filename    String
  description String  @db.Text
  content     String? @db.Text
  contentPath String? // Path to full document file

  // Bill metadata
  status         String?
  authors        String[]
  subjects       String[]
  lastAction     String?
  lastActionDate DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  chatSessions   ChatSession[]
  savedBy        SavedBill[]
  teamWorkspaces TeamWorkspace[]

  // Personal annotations and notes
  personalAnnotations PersonalAnnotation[]
  personalNotes       PersonalNote[]

  @@unique([sessionId, billType, billNumber])
  @@index([sessionId])
  @@index([billType])
  @@index([billNumber])
  @@index([billId])
}

enum BillType {
  HB // House Bill
  SB // Senate Bill
  HJR // House Joint Resolution
  SJR // Senate Joint Resolution
  HCR // House Concurrent Resolution
  SCR // Senate Concurrent Resolution
}

// ============================================
// Chat Models
// ============================================

model ChatSession {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  billId String
  bill   Bill   @relation(fields: [billId], references: [id], onDelete: Cascade)

  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  messages ChatMessage[]

  @@unique([userId, billId])
  @@index([userId])
  @@index([billId])
  @@map("chat_session")
}

model ChatMessage {
  id            String      @id @default(cuid())
  chatSessionId String
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)

  role    MessageRole
  content String      @db.Text

  createdAt DateTime @default(now())

  @@index([chatSessionId])
  @@map("chat_message")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

// ============================================
// Saved Bills Model
// ============================================

model SavedBill {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  billId String
  bill   Bill   @relation(fields: [billId], references: [id], onDelete: Cascade)

  notes     String?  @db.Text
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, billId])
  @@index([userId])
  @@map("saved_bill")
}

// ============================================
// Admin Settings Model
// ============================================

model AdminSetting {
  id            String      @id @default(cuid())
  key           String      @unique
  value         String      @db.Text
  type          SettingType @default(STRING)
  category      String
  description   String?
  updatedBy     String?
  updatedByUser User?       @relation(fields: [updatedBy], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([category])
  @@map("admin_setting")
}

enum SettingType {
  STRING
  NUMBER
  BOOLEAN
  JSON
}

// ============================================
// Team Collaboration Models
// ============================================

model Team {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Team AI Settings (optional - falls back to owner's settings)
  aiProvider String? // 'openai', 'anthropic', 'google'
  aiModel    String? // Model ID
  aiApiKey   String? @db.Text // Team's shared API key

  memberships TeamMembership[]
  workspaces  TeamWorkspace[]
  invitations TeamInvitation[]
  activities  TeamActivity[]

  @@index([slug])
  @@map("team")
}

enum TeamRole {
  OWNER
  ADMIN
  CONTRIBUTOR
  REVIEWER
  VIEWER
}

model TeamMembership {
  id       String   @id @default(cuid())
  teamId   String
  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     TeamRole @default(CONTRIBUTOR)
  joinedAt DateTime @default(now())

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
  @@map("team_membership")
}

model TeamInvitation {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  email     String
  role      TeamRole @default(CONTRIBUTOR)
  token     String   @unique @default(cuid())
  expiresAt DateTime
  createdBy String
  createdAt DateTime @default(now())

  @@index([teamId])
  @@index([token])
  @@map("team_invitation")
}

model TeamWorkspace {
  id         String            @id @default(cuid())
  teamId     String
  team       Team              @relation(fields: [teamId], references: [id], onDelete: Cascade)
  billId     String
  bill       Bill              @relation(fields: [billId], references: [id], onDelete: Cascade)
  status     WorkspaceStatus   @default(IN_REVIEW)
  priority   WorkspacePriority @default(MEDIUM)
  dueDate    DateTime?
  assigneeId String?
  summary    String?           @db.Text
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  annotations BillAnnotation[]
  comments    WorkspaceComment[]
  chatSession TeamChatSession?

  @@unique([teamId, billId])
  @@index([teamId])
  @@index([billId])
  @@map("team_workspace")
}

enum WorkspaceStatus {
  NEW
  IN_REVIEW
  NEEDS_DISCUSSION
  APPROVED
  REJECTED
  ON_HOLD
}

enum WorkspacePriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model BillAnnotation {
  id           String         @id @default(cuid())
  workspaceId  String
  workspace    TeamWorkspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  startOffset  Int
  endOffset    Int
  selectedText String         @db.Text
  content      String         @db.Text
  type         AnnotationType @default(NOTE)
  resolved     Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([workspaceId])
  @@map("bill_annotation")
}

enum AnnotationType {
  NOTE
  QUESTION
  CONCERN
  HIGHLIGHT
}

enum NoteSourceType {
  MANUAL
  CHAT
  TEAM_CHAT
}

model WorkspaceComment {
  id          String             @id @default(cuid())
  workspaceId String
  workspace   TeamWorkspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId      String
  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  content     String             @db.Text
  parentId    String?
  parent      WorkspaceComment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies     WorkspaceComment[] @relation("CommentReplies")
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  @@index([workspaceId])
  @@map("workspace_comment")
}

model TeamChatSession {
  id          String            @id @default(cuid())
  workspaceId String            @unique
  workspace   TeamWorkspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  messages    TeamChatMessage[]

  @@map("team_chat_session")
}

model TeamChatMessage {
  id            String          @id @default(cuid())
  chatSessionId String
  chatSession   TeamChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  userId        String?
  user          User?           @relation(fields: [userId], references: [id])
  role          MessageRole
  content       String          @db.Text
  createdAt     DateTime        @default(now())

  @@index([chatSessionId])
  @@map("team_chat_message")
}

model TeamActivity {
  id         String       @id @default(cuid())
  teamId     String
  team       Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId     String
  type       ActivityType
  entityType String
  entityId   String
  metadata   Json?
  createdAt  DateTime     @default(now())

  @@index([teamId])
  @@index([createdAt])
  @@map("team_activity")
}

enum ActivityType {
  WORKSPACE_CREATED
  STATUS_CHANGED
  ANNOTATION_ADDED
  COMMENT_ADDED
  CHAT_MESSAGE
  MEMBER_JOINED
  MEMBER_LEFT
}

// ============================================
// Personal Annotations & Notes Models
// ============================================

model PersonalAnnotation {
  id           String         @id @default(cuid())
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  billId       String
  bill         Bill           @relation(fields: [billId], references: [id], onDelete: Cascade)
  startOffset  Int
  endOffset    Int
  selectedText String         @db.Text
  content      String         @db.Text
  type         AnnotationType @default(NOTE)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([userId, billId])
  @@map("personal_annotation")
}

model PersonalNote {
  id         String          @id @default(cuid())
  userId     String
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  billId     String
  bill       Bill            @relation(fields: [billId], references: [id], onDelete: Cascade)
  content    String          @db.Text
  sourceType NoteSourceType?
  sourceId   String?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@index([userId, billId])
  @@map("personal_note")
}
